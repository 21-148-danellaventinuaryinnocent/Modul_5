<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Status">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:src="@drawable/status" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="Status saya"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:text="Ketuk untuk menambahkan pembaruan status" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pembaruan Terkini"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:padding="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:src="@drawable/gambar" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Salma"
                    android:textStyle="bold"
                    android:padding="16dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:padding="16dp"
                    android:text="Hari ini 09.23 ?" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:src="@drawable/gambar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Rino"
                    android:textStyle="bold"
                    android:padding="16dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:padding="16dp"
                    android:text="Hari ini 10.34" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:src="@drawable/gambar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Amel"
                    android:textStyle="bold"
                    android:padding="16dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:padding="16dp"
                    android:text="Hari ini 17.30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:src="@drawable/gambar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Marselino"
                    android:textStyle="bold"
                    android:padding="16dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:padding="16dp"
                    android:text="Hari ini 19.00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>